@model KEPSAS.TTS.Models.Talep
@{
	ViewData["Title"] = "Yeni Talep";
}
<div class="card">
	<div class="card-body">
		<form asp-action="Create" method="post">
			@Html.AntiForgeryToken()
			<div class="form-group"><label>Başlık</label><input asp-for="Baslik" class="form-control" /></div>
			<div class="form-group"><label>Açıklama</label><textarea asp-for="Aciklama" class="form-control"></textarea></div>
			<button class="btn btn-primary">Kaydet</button>
			<a class="btn btn-link" href="@Url.Action("Index")">İptal</a>
		</form>
	</div>
</div>
