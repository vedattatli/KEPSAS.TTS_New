@model List<KEPSAS.TTS.Models.Donanim>
@{
    ViewData["Title"] = "Donanımlarım";
}
<div class="content-card">
    <div class="content-card-header">Donanımlarım</div>
    <table class="table mb-0 content-table">
        <thead>
            <tr>
                <th>Seri No</th>
                <th>Model</th>
                <th>Kategori</th>
                <th>Durum</th>
                <th>Alınma</th>
            </tr>
        </thead>
        <tbody>
            @if (!Model.Any())
            {
                <tr><td colspan="5" class="text-center text-muted py-4">Kayıt yok.</td></tr>
            }
            else
            {
                foreach (var d in Model)
                {
                    <tr>
                        <td>@d.SeriNo</td>
                        <td>@d.Model</td>
                        <td>@d.Kategori</td>
                        <td>@d.Durum</td>
                        <td>@(d.AlinmaTarihi?.ToString("dd.MM.yyyy"))</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
